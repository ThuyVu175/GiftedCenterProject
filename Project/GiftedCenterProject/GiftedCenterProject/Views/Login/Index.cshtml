<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    @Styles.Render("~/Content/login")
    @Scripts.Render("~/Scripts/login")
</head>

<body>
    <div class="login-dark">
        <form method="post">
            <h3 class="text-white">Đăng nhập</h3>
            <div class="illustration"><i class="fa fa-lock"></i></div>
            <div class="form-group"><input class="form-control" type="text" placeholder="Tài khoản"></div>
            <div class="form-group"><input class="form-control" type="password" placeholder="Mật khẩu"></div>
            <div class="form-group"><button class="btn btn-primary btn-block">Đăng nhập</button></div>
            <a href="#" class="forgot">Quên tài khoản hoặc mật khẩu?</a>
            <a href="#" class="forgot" data-toggle="modal" data-target="#signUpModal">Bạn chưa có tài khoản?Đăng ký</a>
        </form>
    </div>

</body>

</html>
<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Đăng ký</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group"><input class="form-control" type="text" placeholder="Tên Tài khoản"></div>
                <div class="form-group"><input class="form-control" type="password" placeholder="Mật khẩu"></div>
                <div class="form-group"><input class="form-control" type="password" placeholder="Xác nhận mật khẩu"></div>
                <div class="form-group"><input class="form-control" type="email" placeholder="Email"></div>
                <div class="form-group"><input class="form-control" type="number" placeholder="Số điện thoại"></div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-success" href="#">Đăng ký</a>
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Thoát</button>

            </div>
        </div>
    </div>
</div>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using GiftedCenterProject.Data
@model List<Lecturer>

<div class="container">
    <div class="row">
        <h4 class="text-danger ml-3 mb-4">GIẢNG VIÊN</h4>
    </div>
    <div class="row">
        <div class="form-group col-md-6 padd-0">
            <input class="form-control" placeholder="Nhập tên giáo viên" />
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary">
                <i class="fa fa-search"></i>
                Tìm kiếm
            </button>

            <button class="btn btn-success" data-toggle="modal" data-target="#addLecturer" >
                <i class="fa fa-plus"></i>
                Giảng viên
            </button>

            <button class="btn btn-warning">
                <i class="fa fa-sign-out-alt"></i>
                Xuất file
            </button>
        </div>

    </div>
    <div class="cus-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th class="text-center">Tên giáo viên</th>
                    <th class="text-center">Điện thoại</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Mô tả chung</th>
                    <th class="text-center">Ngày tạo</th>
                    <th class="text-center">Thao tác   </th>
                    <th><input type="checkbox" /></th>
                </tr>
            </thead>
            @{
                foreach (Lecturer lec in Model)
                {
                    <tr>
                        <td class="text-center tr-detail-item" style="cursor: pointer; color: #1b6aaa; width: 165px;">@lec.Name</td>
                        <td class="text-center" style="width: 115px;">@lec.phoneNumber</td>
                        <td class="text-center" style="width: 230px;">@lec.Email</td>
                        <td class="text-center">@lec.detailDescription</td>
                        <td class="text-center" style="width: 90px;">@lec.createDate</td>
                        <td class="text-center" style="width: 110px;">
                            <a href="/Lecturer/DetailLecturer"><i class="fa fa-share" title="Xem chi tiết" style="color: lightgreen;"></i></a>
                            &nbsp; 
                            <i class="fa fa-edit fa-sm " title="Sửa giáo viên" style="color: blue;" data-toggle="modal" data-target="#editLecturer"></i>
                            &nbsp;
                            <i class="fa fa-trash" title="Xóa giáo viên" style="color: red;"></i>
                        </td>
                        <td>
                            <input type="checkbox" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>


<!--Modal Add Lecturer-->
<div class="modal fade" id="addLecturer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm giảng viên</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Tên Giảng viên</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="text"/>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Tuổi</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="number" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Giới tính</label>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" id="sex">
                                <option>1</option>
                                <option>2</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Số điện thoại</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="text" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Email</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="text" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Link ảnh</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="text" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Giới thiệu chung</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="t" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Giới thiệu chi tiết</label>
                        </div>
                        <div class="col-md-8">
                            <textarea class="form-control" id="" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success"><i class="fa fa-save"></i>Thêm mới</button>
            </div>
        </div>
    </div>
</div>




@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using GiftedCenterProject.Data
@model List<GroupSubject>
<div class="container">
    <div class="row">
        <h4 class="text-danger ml-3 mb-4">DANH MỤC MÔN HỌC</h4>
    </div>
    <div class="row">
        <div class="form-group col-md-6 padd-0">
            <input class="form-control" placeholder="Nhập tên danh mục" />
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary">
                <i class="fa fa-search"></i>
                Tìm kiếm
            </button>

            <button class="btn btn-success" data-toggle="modal" data-target="#addCategory">
                <i class="fa fa-plus"></i>
                Danh mục
            </button>


        </div>

    </div>

    <div class="cus-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>

                    <th class="text-center">STT</th>
                    <th class="text-center">Tên danh mục</th>
                    <th class="text-center">Ngày tạo</th>
                    <th class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = 0;
                    foreach (GroupSubject c in Model)
                    {
                        stt= stt + 1;
                    <tr>
                        <td class="text-center tr-detail-item">@stt</td>
                        <td class="text-center">@c.Name</td>
                        <td class="text-center">@c.createDate</td>
                        <td class="text-center">
                            <i class="fa fa-share" title="Xem chi tiết" style="color: lightgreen;"></i>
                            &nbsp; &nbsp;<i class="fa fa-edit fa-sm " title="Sửa danh mục" style="color: blue;" data-toggle="modal" data-target="#editCategory"></i>
                            &nbsp; &nbsp;<i class="fa fa-trash" title="Xóa danh mục" style="color: red;"></i>
                        </td>
                    </tr>
                    
                        }
                    }

        </table>
    </div>
</div>


<!--Modal Add User-->
<div class="modal fade" id="addCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm danh mục</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Tên danh mục</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="text" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success"><i class="fa fa-save"></i>Thêm mới</button>
            </div>
        </div>
    </div>
</div>


<!--Modal Edit user -->
<div class="modal fade" id="editCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa danh mục</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Tên danh much</label>
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="text" value="Múa" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success"><i class="fa fa-save"></i>Thêm mới</button>
                </div>
            </div>
        </div>
    </div>
</div>



